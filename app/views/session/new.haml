#login-box.well
  %h1 My Own

  =form_tag session_path do
    .control-group
      .controls
        =text_field_tag :username, '', :class => 'text txt-login', :placeholder => 'Username'
    
    .control-group
      .controls
        =password_field_tag :password, '', :class => 'text txt-login', :placeholder => 'Password'
    
    =submit_tag 'Login', :class => 'btn btn-primary', :id => 'btn-login'
