%h1 Login

=form_tag session_path do
  .control-group
    .controls
      =text_field_tag :username, '', :class => 'text', :placeholder => 'Username'
  
  .control-group
    .controls
      =password_field_tag :password, '', :class => 'text', :placeholder => 'Password'
  
  =submit_tag 'Login', :class => 'btn btn-primary'
