#quiz-container.well
  %h1=@word.term

  =form_for @quiz, :html => {:class => 'form-horizontal'} do |f|
    =f.hidden_field :word_id, :value => @word.id
    
    =f.text_field :answer, :class => 'input-text', :placeholder => '번역',
      :id => 'quiz-answer'

    .control-group
      =link_to '보기', '#', :class => 'btn btn-mini btn-warning', :id => 'example-link'
      #quiz-example
        %em.muted=@word.example
    
    
    =f.submit 'OK', :class => 'btn btn-large btn-primary'
    =link_to 'Skip', new_quiz_path, :class => 'btn btn-large btn-danger'

