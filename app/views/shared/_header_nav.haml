.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    #navbar-container
      =link_to 'My Own', root_path, :class => 'brand'
      
      %ul.nav
        %li.dropdown
          %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'} 
            Posts
            %b.caret
            
          %ul.dropdown-menu
            %li= link_to 'All', posts_path
            %li= link_to 'New', new_post_path 
        
        %li.dropdown
          %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            Vocabulary
            %b.caret
            
          %ul.dropdown-menu
            %li=link_to 'All', words_path
            %li=link_to 'New', new_word_path
            %li=link_to 'Learn a Word', word_path(Word.random)
            %li=link_to 'Pop Quiz', new_quiz_path
        
        %li.dropdown
          %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            Lessons
            %b.caret
          
          %ul.dropdown-menu
            -Lesson.all.each do |lesson|
              %li=link_to lesson.title, lesson
        
        %li.dropdown
          %a{:href => '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            Categories
            %b.caret
          
          %ul.dropdown-menu
            %li=link_to 'All', categories_path
            %li=link_to 'New', new_category_path
      
      .nav-collapse
        .nav.pull-right 
          %li=link_to Score.first.right, quiz_path(1), :id => 'header-score'
          %li=link_to current_user.username, '#'    
          %li.divider-vertical       
          %li=link_to 'Logout', session_path, :method => :destroy
        
